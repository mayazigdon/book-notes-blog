<%- include("./partials/header.ejs") %>
<% function formatDate(inputDate) {
    const date = new Date(inputDate);
    const day = String(date.getDate()).padStart(2, '0');
    const month = String(date.getMonth() + 1).padStart(2, '0'); // months are 0-indexed
    const year = String(date.getFullYear()).slice(-2); // get last two digits
  
    return `${day}/${month}/${year}`;
  } 
%>
<body>
    <section class="full-note">
        <div class="container">
            <% let booksCoverURL = `https://covers.openlibrary.org/b/isbn/${book.isbn}-M.jpg`; %>
            <div class="book-cover-design">
                <img src="<%= booksCoverURL %>" alt="Book Cover" style="border-radius: 12px; width: 100%;">
            </div>
            <% let date = formatDate(book.date) %>
            <h1 style="margin-bottom: 12px;"> <%=book.title %> </h1>
            <h2 style="margin-bottom: 12px;"> By <%=book.auther  %></h2>
            <p> ISBN:<%= book.isbn %></p>
            <p> Date read: <%= date %></p>
            <p> My grade: <%= book.grade %> /10</p>
            <p> <%= book.summary %></p>
            <p><%= book.content %></p>
            <a href="/" class="back-link">
                <svg viewBox="0 0 24 24" fill="none">
                    <path d="M15 19L8 12L15 5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                Back
              </a>        
            </div>
    </section>
</body>
</html>